{
    "name": "flying/wordpress-utils",
    "description": "Collection of various utility functions to use on WordPress sites",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexander Grimalovsky",
            "email": "alexander.grimalovsky@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Flying\\Wordpress\\": "src"
        }
    },
    "require": {
        "php": "^8.1",
        "ext-iconv": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "timber/timber": "^1.0",
        "flying/wordpress-client-assets-manager": "^2.0",
        "roots/wordpress": "^5|^6",
        "twig/twig": "^2|^3",
        "cocur/slugify": "^3.1|^4.0"
    },
    "replace": {
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "suggest": {
        "cocur/slugify": "Provides ability to generate slugs if there is no transliteration is supported by iconv"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "roots/wordpress-core-installer": false
        }
    }
}
